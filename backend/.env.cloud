NODE_ENV=development
PORT=5000

# MongoDB Atlas (Free Tier)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/ecommerce?retryWrites=true&w=majority
MONGODB_URI_PRODUCTS=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/ecommerce_products?retryWrites=true&w=majority
MONGODB_URI_ORDERS=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/ecommerce_orders?retryWrites=true&w=majority
MONGODB_URI_USERS=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/ecommerce_users?retryWrites=true&w=majority

# Redis Cloud (Free Tier)
REDIS_HOST=redis-xxxxx.c1.us-east-1-1.ec2.cloud.redislabs.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Upstash Kafka (Free Tier) or use local Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ecommerce-app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-too
JWT_REFRESH_EXPIRE=30d

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_key
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100