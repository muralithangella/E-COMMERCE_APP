{
  "name": "ecommerce-backend",
  "version": "2.0.0",
  "description": "Amazon-scale microservices backend",
  "scripts": {
    "install:all": "cd product-service && npm install && cd ../cart-service && npm install && cd ../order-service && npm install && cd ../auth-service && npm install && cd ../notification-service && npm install",
    "prod:start": "start-production.bat",
    "prod:stop": "stop-production.bat",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:logs": "pm2 logs",
    "pm2:restart": "pm2 restart all",
    "pm2:reload": "pm2 reload all",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "dependencies": {
    "mongoose": "^9.0.1"
  }
}
