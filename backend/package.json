{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce microservices backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:gateway": "node gateway.js",
    "start:cluster": "node cluster.js",
    "start:scaled": "concurrently \"PORT=5000 node gateway.js\" \"PORT=5001 node gateway.js\" \"PORT=5002 node gateway.js\"",
    "start:auth": "node src/auth/server.js",
    "start:products": "node src/products/server.js",
    "start:orders": "node src/orders/server.js",
    "start:payments": "node src/payments/server.js",
    "start:inventory": "node src/inventory/server.js",
    "start:notifications": "node src/notifications/server.js",
    "start:users": "node src/users/server.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:products\" \"npm run start:orders\" \"npm run start:payments\" \"npm run start:inventory\" \"npm run start:notifications\" \"npm run start:users\"",
    "start:microservices": "concurrently \"npm run start:gateway\" \"npm run start:orders\" \"npm run start:products\"",
    "start:orders-simple": "node src/orders/simple-server.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.3.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.4",
    "rate-limit-redis": "^4.3.1",
    "redis": "^4.6.7",
    "stripe": "^20.0.0",
    "twilio": "^4.23.0",
    "winston": "^3.10.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ecommerce",
    "microservices",
    "nodejs",
    "express"
  ],
  "author": "E-Shop Team",
  "license": "MIT"
}
