{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "description": "Clean E-commerce Microservices Application",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "start:products": "cd frontend/products-mf && npm start",
    "start:cart": "cd frontend/cart-mf && npm start",
    "install:all": "npm install && cd frontend/products-mf && npm install && cd ../cart-mf && npm install",
    "build": "cd frontend/products-mf && npm run build && cd ../cart-mf && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["ecommerce", "microservices", "react", "node"],
  "author": "Your Name",
  "license": "MIT"
}